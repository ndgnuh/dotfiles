/*
	@name: dmenu-arch
	@author: ndgnuh
*/

* {
	fg: #ffffff;
	bg: #263238;
	

	font: "Fira code 11";
	background-color: @bg;
	color: @fg;
	opacity: 0.65;

}

#window {
	location: north;
	width: 100%;
	height: 32px;
}

#mainbox {
	orientation: horizontal;
}


#inputbar {
	children: [ prompt, textbox-prompt-colon, entry, case-indicator];
}


#prompt {
	padding: 5;
}

#case-indicator {
	str: "abs";
}

#listview {
	line: 100;
	spacing: 0px;
	layout: horizontal;
}

#entry {
	expand: false;
	width: 12em;
	padding: 5;
}

#element {
	padding: 5 10;
}

#element.selected {
	background-color: @fg;
	color: @bg;
}
